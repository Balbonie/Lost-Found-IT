<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="com.example.android.androidclass.SignInActivity"
    android:baselineAligned="false">


    <WebView
        android:id="@+id/myWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <WebView
        android:id="@+id/myOtherWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/DC_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DC Comics Fan"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/marvel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marvel Fan"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back_button_marvel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"

        android:layout_below="@+id/marvel_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/back_button_DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"

        android:layout_below="@+id/DC_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />




</RelativeLayout>
